  const container = document.getElementById("menu-container");
  container.innerHTML = '';
  
 
  document.getElementById("cafe-info").innerHTML = cafeHours[cafeName] || '';


  let uniqueId = Date.now(); // ê³ ìœ  ID ìƒì„± (í•¨ìˆ˜ ë§¨ ìœ„ì— ì¶”ê°€í•˜ë©´ ë” ì¢‹ìŒ)

